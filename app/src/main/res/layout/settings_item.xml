<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_item_switch"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/settings_item_switch"
            android:id="@+id/settings_item_spinner">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Name"
            android:layout_toRightOf="@id/settings_item_spinner"
            android:id="@+id/settings_item_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="information"
            android:layout_toRightOf="@id/settings_item_spinner"
            android:layout_below="@id/settings_item_name"
            android:id="@+id/settings_item_info"/>
    </RelativeLayout>

</LinearLayout>